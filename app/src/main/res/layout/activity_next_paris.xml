<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/parisbackix"
    tools:context="com.example.inloc.nextParis">


    <ImageButton

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/NightLifeImageButton"
        android:scaleType="fitCenter"
        android:src="@drawable/crystal"
        android:background="@null"
        android:layout_alignTop="@+id/LandmarksImageButton"
        android:layout_toStartOf="@+id/LondonTextView" />


    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/restaurantImageButton"
        android:scaleType="fitCenter"
        android:src="@drawable/restaurant"
        android:background="@null"
        android:layout_alignTop="@+id/ShoppingImageButton"
        android:layout_toStartOf="@+id/LondonTextView" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/LandmarksImageButton"
        android:scaleType="fitCenter"
        android:src="@drawable/landmarks"
        android:background="@null"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/ShoppingImageButton" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/ShoppingImageButton"
        android:scaleType="fitCenter"
        android:src="@drawable/shopping"
        android:background="@null"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/LandmarksImageButton"
        android:layout_toEndOf="@+id/LondonTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Paris"
        android:id="@+id/LondonTextView"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_below="@+id/LondonTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="361dp" />



</RelativeLayout>
