<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.inloc.nightlifeParis">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nightlife"
        android:id="@+id/OneTextView"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ne vous souciez pas du lendemain"
        android:id="@+id/TwoTextView"
        android:textSize="15dp"
        android:layout_below="@+id/OneTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Le Queen"
        android:id="@+id/ThreeTextView"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/TwoTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/FourTextView"
        android:layout_below="@+id/ThreeTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A club with the combination of great music and great people"
        android:id="@+id/FiveTextView"
        android:layout_below="@+id/ThreeTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Opening times: Monday, Friday &amp; Saturday | 22:00 - 04:00 "
        android:id="@+id/SixTextView"
        android:layout_below="@+id/FiveTextView"
        android:layout_toEndOf="@+id/FourTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bliss KfÃ©"
        android:id="@+id/SevenTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The perfect spot for gourmet-styled dishes "
        android:id="@+id/EightTextView"
        android:layout_below="@+id/SevenTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/TenTextView"
        android:layout_below="@+id/EightTextView"
        android:layout_alignStart="@+id/EightTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Opening times: Monday - Sunday | 15:00 - 22:00"
        android:id="@+id/ThirteenTextView"
        android:layout_alignTop="@+id/TenTextView"
        android:layout_alignStart="@+id/TenTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Le Bain"
        android:id="@+id/ElevenTextView"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/ThirteenTextView"
        android:layout_alignStart="@+id/ThirteenTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Located in central Paris, this bar has it all"
        android:id="@+id/TwelveTextView"
        android:layout_below="@+id/ElevenTextView"
        android:layout_toEndOf="@+id/TenTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Opening times: Monday - Friday | 14:00 - 22:00 | Saturday &amp; Sunday | 14:00 - 12:00"
        android:id="@+id/FourteenTextView"
        android:layout_below="@+id/TwelveTextView"
        android:layout_alignStart="@+id/TwelveTextView" />

</RelativeLayout>
