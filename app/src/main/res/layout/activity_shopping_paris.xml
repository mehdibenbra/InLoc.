<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.inloc.ShoppingParis">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Shopping"
        android:id="@+id/OneTextView"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/TwoTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="&quot;L’élégance est la seule beauté qui ne se fane jamais&quot;"
        android:id="@+id/QuoteTextView"
        android:textSize="15dp"
        android:layout_below="@+id/OneTextView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Avenue des Champs-Élysées"
        android:id="@+id/TwoTextView"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/QuoteTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Frequently described as ‘the world’s most beautiful avenue’, the Avenue des Champs-Élysées is a Paris must-see"
        android:id="@+id/ThreeTextView"
        android:layout_below="@+id/TwoTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Boulevard Haussman"
        android:id="@+id/FourTextView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=" A symbol of French lifestyle and a leading commercial centre"
        android:id="@+id/FiveTextView"
        android:layout_below="@+id/FourTextView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rue Saint-Honoré"
        android:id="@+id/SixTextView"
        android:layout_below="@+id/FiveTextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="The Rue Saint-Honoré screams luxury, with a number of famous fashion houses"
        android:id="@+id/EightTextView"
        android:layout_below="@+id/SixTextView"
        android:layout_alignParentStart="true" />

</RelativeLayout>
